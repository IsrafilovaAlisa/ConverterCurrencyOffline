<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="utf.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:utf"
    Shell.FlyoutBehavior="Disabled"
    Title="utf">

    <TabBar>
        <ShellContent
            Title="Главная страница"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"/>
        <ShellContent
            Title="Настройки"
            ContentTemplate="{DataTemplate local:Service.SettingsView}"
            Route="Settings"/>
        <ShellContent
            Title="МОИ Покупки"
            ContentTemplate="{DataTemplate local:DataBase.FramePurchases}"
            Route="LocalPurchases"/>
    </TabBar>

</Shell>
